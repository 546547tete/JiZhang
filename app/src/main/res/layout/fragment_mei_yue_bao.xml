<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
   android:fillViewport="true"
    tools:context=".fragment.MeiYueBaoFragment">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent">



    <LinearLayout
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_startTime_shuju"
            android:layout_weight="1"
            android:hint="请输入起始时间"
            android:gravity="center"
            android:background="@drawable/timer_shap"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <TextView
            android:id="@+id/tv_endTime_shuju"
            android:layout_weight="1"
            android:hint="请输入结束时间"
            android:gravity="center"
            android:background="@drawable/timer_shap"
            android:layout_gravity="center_vertical"
            android:layout_margin="@dimen/dp_10"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>
        <Button
            android:id="@+id/btn_ok_shuju"
            android:text="确定"
            android:layout_margin="@dimen/dp_5"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"/>

    </LinearLayout>

    <com.example.jizhang.utils.ZheXianView
        android:id="@+id/zhexiantu"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_370" />

    <androidx.recyclerview.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/rcy_zhexiantu"
        />

    </LinearLayout>
</ScrollView>